@model Adeliate.Portal.Models.Administration.AllCustomerModel

@{
  ViewBag.Title = "EditAffiliate";
  Layout = "~/Views/_Shared/Layouts/_Main.cshtml";
 }
<ol class="breadcrumb mb-0">
  <li class="breadcrumb-item">Home</li>
  <li class="breadcrumb-item">
    <a href="#">Admin</a>
  </li>
  <li class="breadcrumb-item active">Dashboard</li>
</ol>
<div class="container-fluid">
  <div class="animated fadeIn">
    <div class="row">
      
      <table class="table table-hover table-outline mb-0 hidden-sm-down">
        <thead class="thead-default">
          <tr>
            <th class="text-center">
              
            </th>
            <th>Affiliate</th>
            <th>Customer Type</th>
            <th class="text-center">Customer Status</th>
            <th class="text-center">Username</th>
            <th class="text-center">Is Active</th>
            <th>

            </th>
          </tr>
        </thead>
        <tbody style="background:white;">
          @foreach(var item in Model.Customers)
          {
            <tr style="cursor:pointer;" class="customerID" customerID="@item.ID">
              <td class="text-center">
                 
                <div style="width:50px; height:60px;">
                  <img src="/Images/Customer?id=@item.ID" alt="Alternate Text" style="height:100%; width:100%;" />
                </div>
              </td>
              <td>
                <span>@item.Affiliate.Name</span>
              </td>
              <td>
                <span>@item.CustomerType</span>
              </td>
              <td class="text-center" >
                <span>@item.CustomerStatus</span>
              </td>
              <td class="text-center">
                <span>@item.Username</span>
              </td>
              
              <td class="text-center">
                <span>@item.IsActive</span>
              </td>
              <td class="text-center">
                <button type="button" class="btn btn-danger btnEdit"  style="cursor:pointer;">Edit</button>
              </td>
            </tr>
          }
         
    
        </tbody>
      </table>

    </div>
    <!--/.row-->

  </div>
 
</div>

<script>
  $(document).ready(function () {


    $('.btnEdit').click(function () {
      var parent = $(this).closest('.customerID');
      var id = parent.attr('customerID');
      window.location = "/adminCustomerEdit?id=" + id;
    });

   
  });
</script>

