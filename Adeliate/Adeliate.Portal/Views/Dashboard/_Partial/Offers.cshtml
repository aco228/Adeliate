@model Adeliate.Portal.Models.Dashboard.DashboardModel
<script src="~/Scripts/managers/dashboard.offers.js"></script>
<script>
  var _offerManager = null;
  $(document).ready(function () {
    _offerManager = new DashboardOffersManager();
    _offerManager.offersCount = @AdliteContext.Current.AdliteCache.OfferCount;
  });

</script>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-block">
        <div class="row">
          <div class="col-5">
            <h4 class="card-title">Offers</h4>
            <div class="small text-muted" style="margin-top:-10px;">For this month</div>
          </div>
        </div>
        <hr class="m-0">

        <br>
        <table class="table table-hover table-outline mb-0 hidden-sm-down">
          <thead class="thead-default">
            <tr>
              <th class="text-center">
                <i class="icon-people"></i>
              </th>
              <th>Name</th>
              <th class="text-center">Country</th>
              <th>Cap</th>
              <th class="text-center">Payment Method</th>
              <th>Clicks</th>
              <th class="text-center">CR</th>
              <th class="text-center">
                <i class="icon-settings"></i>
              </th>
            </tr>
          </thead>
          <tbody id="__offersLoadHolder"> </tbody>
        </table>
        <div id="__offersLoadActions">
          <button type="button" id="__offersLoadActionsLoadMore" class="btn btn-primary">Load more</button>
        </div>
      </div>
    </div>
  </div>
  <!--/.col-->
</div>


