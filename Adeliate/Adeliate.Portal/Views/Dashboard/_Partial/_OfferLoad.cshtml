@model List<Adeliate.Portal.Code.Cache.AffiliateOfferCache>

@foreach (Adeliate.Portal.Code.Cache.AffiliateOfferCache offer in Model)
{
  <tr class="__offersLoadOffer" id="__offersLoadOffer_@offer.OfferID" clicks="@offer.Clicks" transactions="@offer.Transactions" cap="@offer.Cap">
    <td class="text-center">
      <div class="avatar">
        <img src="/Images/Campaign?id=@offer.CampaignID" class="img-avatar" >
        <span class="avatar-status badge-success"></span>
      </div>
    </td>
    <td>
      <div>@offer.Name</div>
      <div class="small text-muted">
        <span class="__offersLoadOffer_clicks">@offer.Clicks</span> clicks
      </div>
    </td>
    <td class="text-center">
      <img src="@string.Format("/Images/_FlagsX/{0}.png", offer.CountryCode.ToLower())" style="height:24px;">
    </td>
    <td>
      <div class="clearfix">
        <div class="float-left">
          <strong class="__offersLoadOffer_progressInfo">50%</strong>
        </div>
        <div class="float-right">
          <small class="text-muted">
            <span class="__offersLoadOffer_transactions">@offer.Transactions</span> / @offer.Cap
          </small>
        </div>
      </div>
      <div class="progress progress-xs">
        <div class="progress-bar bg-success __offersLoadOffer_progress" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
    </td>
    <td class="text-center">
      <i class="fa fa-cc-mastercard" style="font-size:24px"></i>
    </td>
    <td>
      <div class="small text-muted">Clicks</div>
      <strong>
        <span class="__offersLoadOffer_clicks">@offer.Clicks</span>
      </strong>
    </td>
    <td class="text-center">
      <div class="gaugejs-wrap sparkline" style="width:34px;height:34px">
        <canvas id="gauge-1" width="34" height="34"></canvas>
        <span class="value">
          <span class="__offersLoadOffer_convertionRate">0</span>
        </span>
      </div>
    </td>
    <td class="text-center">
      <button type="button" class="btn btn-link text-muted">
        <i class="icon-settings"></i>
      </button>
    </td>
  </tr>
}